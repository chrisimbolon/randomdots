<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">Update Spot</h1>
  <div class="col-md-6 offset-md-3">
    <div class="card rounded shadow p-3">
      <form
        action="/spots/<%= spot._id %>?_method=PUT"
        method="POST"
        novalidate
        class="validated-form"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input
            class="form-control"
            type="text"
            id="title"
            name="spot[title]"
            value="<%= spot.title %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input
            class="form-control"
            type="text"
            id="location"
            name="spot[location]"
            value="<%= spot.location %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="price">Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>

            <input
              type="text"
              class="form-control"
              id="price"
              placeholder="0.00"
              aria-label="price"
              aria-describedby="price-label"
              name="spot[price]"
              value="<%= spot.price %>"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">description</label>
          <textarea
            class="form-control"
            type="text"
            id="description"
            name="spot[description]"
            required
          >
            <%= spot.description %></textarea
          >
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">add more pictures</label>
          <input
            class="form-control"
            type="file"
            id="image"
            name="image"
            multiple
          />
        </div>
        <!-- deleting image       -->
        <div class="mb-3">
          <% spot.images.forEach(function(img, i) { %>
            <img src="<%= img.url.replace('/upload/', '/upload/w_200/f_auto/') %>" class="img-thumbnail" alt="" />
          <div class="form-check-inline">
            <input
              type="checkbox"
              id="image-<%=i%>"
              name="deleteImages[]"
              value="<%= img.filename %>"
            />
          </div>
          <label for="image-<%=i%>">Delete ?</label>
          <% }) %>
        </div>
        <div class="mb-3">
          <button class="btn btn-info">Update Spot</button>
        </div>
      </form>
      <a href="/spots/<%= spot._id %>">Back to All Spots</a>
    </div>
  </div>
</div>
