
<% layout("layouts/boilerplate") %>
<div id="map" style="width: 100%; height: 500px"></div>
<h1 class="m-3">All Spots</h1>


<div class="container">
  <div class="row">
    <% for (let spot of spots) { %>
      <div class="col-md-6 mb-4"> 
        <div class="card h-100"> 
          <div class="row no-gutters">
            <div class="col-md-6">
              <img class="img-fluid" alt="image of some cool spot" 
     src="<%= spot.images[0].url.replace('/upload/', '/upload/w_400/') %>" />
            </div>
            <div class="col-md-6">
              <div class="card-body">
                <h5 class="card-title"><%= spot.title %></h5>
                <p class="card-text"><%= spot.description %></p>
                <p class="card-text">
                  <small class="text-muted"><%= spot.location %></small>
                </p>
                <a class="btn btn-primary" href="/spots/<%= spot._id %>">
                  View <%= spot.title %>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<!-- show cluster map -->
<script>
  const maptilerApiKey = "<%- process.env.MAPTILER_API_KEY %>";
  const spots = { features: <%- JSON.stringify(spots) %> }
</script>
<script src="/js/clusterMap.js"></script>
