
<% layout("layouts/boilerplate") %>
<div id="map" style="width: 100%; height: 500px"></div>
<h1>All Spots</h1>
<div class="mb-3">
  <a href="/spots/new">add new spot</a>
</div>

<div class="container">
  <div class="row">
    <% for (let spot of spots) { %>
      <div class="col-md-6 mb-4"> <!-- Each card takes half of the row -->
        <div class="card h-100"> <!-- h-100 ensures equal height -->
          <div class="row no-gutters">
            <div class="col-md-4">
              <img class="img-fluid" alt="" src="<%= spot.images[0].url %>" />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= spot.title %></h5>
                <p class="card-text"><%= spot.description %></p>
                <p class="card-text">
                  <small class="text-muted"><%= spot.location %></small>
                </p>
                <a class="btn btn-primary" href="/spots/<%= spot._id %>">
                  View <%= spot.title %>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<!-- code below to show cluster map -->
<script>
  const maptilerApiKey = "<%- process.env.MAPTILER_API_KEY %>";
  const spots = { features: <%- JSON.stringify(spots) %> }
</script>
<script src="/js/clusterMap.js"></script>
