<% layout('layouts/boilerplate')%>
<div class="container d-flex justify-content-center align-items-center mt-4">
  <div class="row align-items-center shadow" style="max-width: 900px;">
    <div class="col-md-6 p-0 d-none d-md-block">
      <img src="/imgs/login_reg.webp" alt="Register" class="img-fluid h-100 w-100 object-fit-cover" style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;" />
    </div>
    <div class="col-md-6 col-12 p-4 bg-white rounded-end">
      <h5 class="mb-4">Register</h5>
      <form
        action="/register"
        method="POST"
        class="validated-form"
        novalidate
      >
        <div class="mb-3">
          <label class="form-label" for="username">Username</label>
          <input class="form-control" type="text" id="username" name="username" required autofocus />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="email">Email</label>
          <input class="form-control" type="email" id="email" name="email" required />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="password">Password</label>
          <input class="form-control" type="password" id="password" name="password" required />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <button class="btn btn-success w-100">Register</button>
      </form>
    </div>
  </div>
</div>
