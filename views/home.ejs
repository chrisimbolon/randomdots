<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Randomdots</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> 
    <link rel="stylesheet" href="/css/home.css" />
  </head>

  <body class="d-flex text-center text-white bg-dark">
    <div
      class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column align-items-start"
    >
    <header class="mb-auto">
      <nav class="navbar navbar-expand-md navbar-dark">
        <div class="container-fluid">
          <!-- Logo -->
          <a class="navbar-brand" href="#">
            <img src="/imgs/logo.png" alt="Randomdots Logo" height="50" />
          </a>
    
            <!-- Mobile Toggle Button -->
<button
class="navbar-toggler"
type="button"
data-bs-toggle="collapse"
data-bs-target="#navbarNav"
aria-controls="navbarNav"
aria-expanded="false"
aria-label="Toggle navigation"
>
<span class="navbar-toggler-icon open-icon"></span>
<span class="close-icon d-none">âœ–</span>


</button>

    
          <!-- Navbar Links -->
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link" href="/spots">All Spots</a>
              </li>
              <% if (!currentUser) { %>
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/register">Subscribe</a>
              </li>
              <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    

      <main class="px-3 text-start">
        <h1 class="brand-heading">Start Exploring Today!</h1>
        <p class="lead mb-5">
          We're excited to have you here <br />
          Discover our diverse spots for foods, coffee, and more
          <br />
          Share your experiences and join the conversation!
        </p>
        <a href="/spots" class="cta-btn">Check all spots</a>
      </main>

      <footer class="mt-auto text-white-50">
        <p>&copy; randomdots.id 2025</p>
      </footer>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const navbarToggler = document.querySelector(".navbar-toggler");
        const navbarCollapse = document.querySelector("#navbarNav");
        const openIcon = document.querySelector(".open-icon");
        const closeIcon = document.querySelector(".close-icon");
    
        navbarToggler.addEventListener("click", function () {
          const isExpanded = navbarToggler.getAttribute("aria-expanded") === "true";
    
          // Bootstrap automatically adds/removes 'show' on .navbar-collapse, so we handle the icons manually
          if (isExpanded) {
            openIcon.classList.remove("d-none"); // Show hamburger icon
            closeIcon.classList.add("d-none"); // Hide close (X) icon
          } else {
            openIcon.classList.add("d-none"); // Hide hamburger icon
            closeIcon.classList.remove("d-none"); // Show close (X) icon
          }
        });
    
        // Close menu on outside click
        document.addEventListener("click", function (event) {
          if (!navbarToggler.contains(event.target) && !navbarCollapse.contains(event.target)) {
            navbarCollapse.classList.remove("show");
            navbarToggler.setAttribute("aria-expanded", "false");
            openIcon.classList.remove("d-none"); // Reset to hamburger icon
            closeIcon.classList.add("d-none"); // Hide close (X) icon
          }
        });
      });
    </script>
        

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
